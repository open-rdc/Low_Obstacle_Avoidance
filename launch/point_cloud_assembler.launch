<launch>
    <node type="periodic_snapshotter" pkg="laser_assembler" name="my_point_cloud_assenbler">
    </node>
    <node type="point_cloud_assembler" pkg="laser_assembler"
            name="my_assembler">
        <remap from="cloud" to="my_cloud"/>
        <param name="max_clouds" type="int" value="1000" />
        <param name="fixed_frame" type="string" value="base_link" />
    </node>
</launch>
